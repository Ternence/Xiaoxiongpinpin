<!--pages/component/Goods/Goods.wxml-->
<view class="food">
  <image class="img" src="{{goods.src}}"></image>
  <view class="food-info">
    <view class="name">{{goods.name}}</view>
    <view class="sales">月售 {{goods.sales}} 库存 {{goods.stock}}
    </view>
    <view class="price">￥ {{goods.price}}</view>
  </view>
  <view class="food-numb">
    <view class="remove" bindtap="removeFromTrolley" hidden="{{number==0}}" data-index="{{index}}">-</view>
    <text class="text" hidden="{{number==0}}">{{number}}</text>
    <view class="add" bindtap="addToTrolley" data-index="{{index}}">+</view>
  </view>
</view>
<!--pages/component/Goods/Goods.wxml-->
<view class="fruit">
  <image class="img" src="{{good.src}}"></image>
  <view class="fruit-info">
    <view class="name">{{good.name}}</view>
    <view class='dscr'>{{good.description}}</view>
    <view class="price">ï¿¥ {{good.price}}</view>
  </view>
  <view class="fruit-numb">
    <view class="remove" catchtap="removeFromTrolley" hidden="{{good.num==0}}" data-index="{{index}}">-</view>
    <text class="text" hidden="{{num==0}}">{{good.num}}</text>
    <view class="add" catchtap="addToTrolley" data-index="{{index}}">+</view>
  </view>
</view>
/* pages/shoppingCart/shoppingCart.wxss */


.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 85rpx;
  background: #FFF;
}



.left {
  width: 60%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.left .sizeandcolor{
  font-size: 50rpx;
  background: transparent;
  margin-left: 10rpx;
}

.right {
  width: 40%;
  background: red;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.chose {
  border-radius: 50%;
}

.noGoods {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tips {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}

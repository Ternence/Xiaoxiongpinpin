<!--pages/shoppingCart/shoppingCart.wxml-->
<view wx:if="{{num==0}}">
  <view class='noGoods'>
    <text>购物车空空如也，赶紧去添加吧</text>
    <button bindtap='LinktoCart'>去购物</button>
  </view>
</view>
<view wx:if="{{num>0}}">
<scroll-view scroll-y='true'>
  <Goods goods='{{goods}}'></Goods>
</scroll-view>
<view class='footer'>
  <view class='left'>
    <text class='chose'>全选</text>
    <text>合计¥{{price}}</text>
  </view>
  <view class='right'>
    <text>去结算</text>
  </view>
</view>
</view>
